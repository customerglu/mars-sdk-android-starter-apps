<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.firebase.quickstart.fcm.java.MainActivity">

    <ImageView
        android:layout_width="186dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/mars_default_400"
        app:srcCompat="@drawable/mars_default_400"
        tools:srcCompat="@drawable/mars_default_400" />

    <TextView
        android:id="@+id/informationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/marax_default_message" />

    <Button
        android:id="@+id/drawWebView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show My Offers" />

    <Button
        android:id="@+id/order_completed_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAKE ORDER Rs50" />

    <Button
        android:id="@+id/update_attributes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Attributes" />

    <Button
        android:id="@+id/order_completed_600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make ORDER Rs 600" />

    <Button
        android:id="@+id/random_event_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RANDOM EVENT TEST" />

    <Button
        android:id="@+id/random_event_bad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random event bad" />

</LinearLayout>
